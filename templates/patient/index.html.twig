{% extends 'base.html.twig' %}

{% block title %}Bodrum - Patients{% endblock %}

{% block body %}
    <br><br><br>
    <div class="mx-auto p-4 bg-light w-75"> 
        <br>
        <h3 >Le nombre de patients : {{patients|length}}</h3>
        <br><br>
        <h4>
        <a href="{{ path('app_ajout_patient')}}">
            <input type="button" class="btn btn-dark" value="Cliquez ici pour ajouter un patient"</input>
        </a>
        <a href="{{ path('app_sejours_actuels_patient')}}">
            <input type="button" class="btn btn-success" value="Cliquez ici pour voir les séjours actuels"</input>
        </a>
        </h4>
        <br>
        <table class="table">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Séjour(s)</th>
            <th>Modifier</th>
        </tr>

        {% for patient in patients %}
            <tr>
                <td>{{patient.getId}}</td>
                <td>{{patient.getNom}}</td> 
                <td>{{patient.getPrenom}}</td>
                <td><a href="{{path("app_patient_id",{id:patient.id})}}"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
                <td>
                    <a href="{{path("app_modif_patient",{id:patient.id})}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            {# <a href="{{path("app_modif_patient",{id:patient.id})}}">Modifier</a>
            <a href="{{path("app_supp_patient",{id:patient.id})}}" onclick="Etes-vous sûr de vouloir supprimer ?">Supprimer</a>#}
            </tr>
        {% else %}
            Pas de patients trouvés.
        {% endfor %}
        </table>
        <br><br> 
    </div>
{% endblock %}
